@model ECommerceApp.Services.UserAccountService.DTOs.RoleDTO

<h1>Are you sure you want to delete role :@Model.Name </h1>
<div class="container-fluid">
    <div class="row">
        <h2>Add</h2>
    </div>
    <form method="post" >
        <div class="row d-flex flex-column">
            <input type="hidden" asp-for="Id" style="width: 400px; height: 40px; outline: none; border-radius: 5px;" >
        </div>

        <div style="width: 400px;" class="row mt-4 justify-content-end">
            <button type="submit" asp-controller="Role" asp-action="DeletePost" class="btn-danger">Yes</button>
        </div>

        <div style="width: 400px;" class="row mt-4 justify-content-end">
            <button type="submit" asp-controller="Role" asp-action="Index" class="btn-primary">No</button>
        </div>
    </form>

</div>
