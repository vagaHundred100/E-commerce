@model List<ECommerceApp.Services.UserAccountService.DTOs.RoleDTO>

<div id="content">

    <!-- Topbar -->
    <!-- End of Topbar -->
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            </div>
            <div class="card-body">
                <a asp-controller="Role" asp-action="Create">
                    <button type="submit" style="width: 150px; height: 40px; border: none; background-color: #4e73df; color: #fff; border-radius: 5px; margin-bottom: 20px;">Add +</button>
                </a>
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var role in @Model)
                            {
                                <tr>
                                    <td>@role.Name</td>
                                    <td>
                                        <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id">edit</a>
                                        <a  asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id">delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

</div>
<!-- End of Main Content -->
<!-- Footer -->
